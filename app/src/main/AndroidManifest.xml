<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.worldskills.tsppspmobile">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.InicioActivity"
            android:theme="@style/Inicio"
            android:label="TSP/PSP Mobile"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.TimeLogActivity"
            android:label="Time Log"
            android:parentActivityName=".activities.InicioActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.InicioActivity"/>
        </activity>

        <activity
            android:name=".activities.DefectLogActivity"
            android:parentActivityName=".activities.InicioActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.InicioActivity"/>

        </activity>

        <activity
            android:name=".activities.ProjectPlanSummaryActivity"
            android:parentActivityName=".activities.InicioActivity"
            android:label="Project Plan Summary"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.InicioActivity"/>

        </activity>

        <activity
            android:name=".activities.MenuActivity"
            android:parentActivityName=".activities.InicioActivity"
            android:label="Menu"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.InicioActivity"/>

        </activity>

    </application>

</manifest>